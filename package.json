{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "prod": "set NODE_ENV=production && node ./bin/www",
    "test": "jest --detectOpenHandles --forceExit",
    "loadtest": "set NODE_ENV=development && node ./bin/www"
  },
  "dependencies": {
    "app-module-path": "^2.2.0",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.4",
    "cross-fetch": "^2.2.2",
    "debug": "~2.6.9",
    "dotenv": "^8.0.0",
    "express": "~4.16.0",
    "express-fileupload": "^1.1.1-alpha.1",
    "express-handlebars": "^5.3.1",
    "express-session": "^1.15.6",
    "express-socket.io-session": "^1.3.5",
    "farmhash": "^2.1.0",
    "fb": "^2.0.0",
    "http-errors": "~1.6.2",
    "joi": "^14.3.1",
    "morgan": "^1.9.1",
    "nodemailer": "^4.6.8",
    "nodemailer-html-to-text": "^3.0.0",
    "preview-email": "0.0.8",
    "randomstring": "^1.1.5",
    "redis": "^2.8.0",
    "session-file-store": "^1.2.0",
    "socket.io": "^2.1.1",
    "socket.io-redis": "^5.2.0",
    "uniqid": "^5.0.3"
  },
  "devDependencies": {
    "jest": "^24.1.0",
    "loadtest": "^3.0.4",
    "optimist": "^0.6.1",
    "puppeteer": "^1.9.0",
    "socket.io-client": "^2.1.1"
  },
  "jest": {
    "testMatch": [
      "**/tests?/**/*.[jt]s?(x)",
      "**/test.*.js"
    ],
    "verbose": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ],
    "setupFiles": ["dotenv/config"]
  }
}
